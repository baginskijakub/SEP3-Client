@if (Size == "Big")
{
    <button class="teritary-button" onclick="@OnClickFunction">
        @if (hasArrow)
        {
            if (arrowSide == "Left")
            {
                <img class="left-arrow" src="icons/arrow.svg" alt="arrow"/>
                @Text
            }
            else
            {
                @Text
                <img class="right-arrow" src="icons/arrow.svg" alt="arrow"/>
            }
        }
        else
        {
            @Text
        }
    </button>
}
else
{
    <button class="teritary-button-small" onclick="@OnClickFunction">
        @if (hasArrow)
        {
            if (arrowSide == "Left")
            {
                <img class="left-arrow" src="icons/arrow.svg" alt="arrow"/>
                @Text
            }
            else
            {
                @Text
                <img class="right-arrow" src="icons/arrow.svg" alt="arrow"/>
            }
        }
                else
                {
                    @Text
                }
    </button>
}


@code {
    [Parameter]
    public string Text { get; set; } = "Button";

    [Parameter] 
    public Action<string> OnClickFunction { get; set; }
    
    [Parameter]
    public string Size { get; set; } = "Big";

    [Parameter]
    public bool hasArrow { get; set; }
    
    [Parameter]
    public string? arrowSide { get; set; }
    


}